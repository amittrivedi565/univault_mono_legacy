                        <div class="main-bottom">
                            <div class="main-accoridan">
    
                                <% if (courseData.length>0) { %>
                                    <% var index = 0; %>
                                    <% for( let courseArray of courseData  ) { %>
                                        <% index++ %>
                                        <div id="accordion">
                                            <div style="margin-top: 10px;" class="card">
                                              <div class="card-header" id="headingOne">
                                                <h5 class="mb-0">
