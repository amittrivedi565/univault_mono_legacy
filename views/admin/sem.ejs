<!DOCTYPE html>
<html lang="en">
<%- include('includes/head.ejs') %>
<body>
    <div class="main">
      <%- include('partials/sidebar') %>
        <div class="main-right">
            <%- include('partials/nav') %>
            <div class="main-right-top">
                <b>Semester Page</b>
                <div class="addModal">
                   <!-- Button trigger modal -->
                   <button type="button" class="btn btn-primary btn-sm " data-bs-toggle="modal" data-bs-target="#exampleModal">+</button>
                   <!-- Modal -->
                   <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                         <div class="modal-content">
                            <div class="modal-header">
                               <h1 class="modal-title fs-5" id="exampleModalLabel">Create Semesters</h1>
                               <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                               <form method="post">
                                  <div class="form-group">
                                     <label for="recipient-name" class="col-form-label">Sem Name:</label>
                                     <select  name="name">
                                        <option value="" selected data-id="0">Select</option>
                                        <option value="First Semesters" data-id="1">First Semesters</option>
                                        <option value="Second Semesters" data-id="2">Second Semesters</option>
                                        <option value="Third Semesters" data-id="3">Third Semesters</option>
                                        <option value="Fourth Semesters" data-id="4">Fourth Semesters</option>
                                        <option value="Fifth Semesters" data-id="4">Fifth Semesters</option>
                                        <option value="Sixth Semesters" data-id="4">Sixth Semesters</option>
                                        <option value="Seventh Semesters" data-id="4">Seventh Semesters</option>
                                        <option value="Eight Semesters" data-id="4">Eight Semesters</option>
                                     </select>
                                  </div>
                            </div>
                            <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                         </div>
                         </form>
                      </div>
                   </div>
                </div>
             </div>

             <div class="main-right-bottom">
                <% if (semData.length>0) { %>
                <% var index=0; %>
                <% for( let semArray of semData ) { %>
                <% index++ %>
                <div class="accordion mb-5 " id="accordionFlushExample">
                   <div class="accordion-item">
                      <h2 class="accordion-header" id="flush-headingOne">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                         data-bs-target="#flush-<%=index%>" aria-expanded="false"
                         aria-controls="flush-collapseOne">
                      # <%= semArray.name %>
                      </button>
                      <div id="flush-<%=index%>" class="accordion-collapse collapse"
                         aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                         <div class="accordion-body">
                            <table class="table table-sm table-hover">
                               <thead >
                                  <tr>
                                     <th scope="col">Sem</th>
                                     <th scope="col">Years</th>
                                     <th scope="col">*Subjects</th>
                                  </tr>
                               </thead>
                               <tbody>
                                  <tr>
                                     <td><%= semArray.name %> </td>
                                     <td><%= semArray.year_name  %></td>
                                     <td><a href="/close/sub/<%= semArray.year_id %>/<%= semArray.name %>/<%= semArray.id %>"><button type="button" class="btn btn-outline-primary btn-sm">Next</button></a></td>
                                  </tr>
                               </tbody>
                            </table>
                         </div>
                      </div>
                   </div>
                   <% } %>
                </div>
                <% } %>
            </div>
        </div>
    </div>
<%- include('partials/script') %>
</body>
</html>