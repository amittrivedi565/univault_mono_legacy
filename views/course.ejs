                                                 <table class="table align-middle table-sm table-hover">
                                                    <thead class="thead-dark">
                                                        <tr>
                                                            <th scope = "col" >Code</th>
                                                            <th scope = "col" >Name</th>
                                                            <th scope = "col" >Description</th>
                                                            <th scope = "col" >Tags</th>
                                                            <th scope = "col" >Years*</th>
                                                            <th scope = "col" >Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                
                                                            <td><%= courseArray.course_code %></td>
                                                            <td><%= courseArray.course_name %></td>
                                                            <td><a href="#"><button type="button" class="btn btn-link">View</button></a></td>
                                                            <td><a href="#"><button type="button" class="btn btn-link">View</button></a></td>
                                                            <!-- going to year page wit course name and year id  -->
                                                            <td><a href="/api/close/branch/course/year/<%= courseArray.course_name %>/<%= courseArray.course_id %>"><button type="button" class="btn btn-primary">Next</button></a></td>
                                                            <!-- deleting the course with course_id -->
                                                            <form action="/api/close/branch/course/<%= courseArray.course_id %>?_method=DELETE" method="post">

                                                                <td>
                                                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                                                                        Delete
                                                                    </button>
                                                                    
                                                                    <!-- Modal -->
                                                                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                                      <div class="modal-dialog" role="document">
                                                                        <div class="modal-content">
                                                                          <div class="modal-header">
                                                                            <h5 class="modal-title" id="exampleModalLabel">Confirmation For Delete Action</h5>
                                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                              <span aria-hidden="true">&times;</span>
                                                                            </button>
                                                                          </div>
                                                                          <div class="modal-body">
                                                                            *Warning: Deleting This Course Deletes Corresponding Years.
                                                                          </div>
                                                                          <div class="modal-footer">
                                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                                            <button type="submit" class="btn btn-warning">Submit</button>
                                                                          </div>
                                                                        </div>
                                                                      </div>
                                                                    </div>
                                                                  </td>

                                                            </form>
                                                        </tr>
                                                    </tbody>
                                                 </table>
                                                </div>
                                              </div>
                                            </div>
                                    
                                    <% } %>
                         
                                <% } %>


                            </div>









































